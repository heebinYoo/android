<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.NavigateActivity">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="101dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route">

    </FrameLayout>

    <Button
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_button"
        app:layout_constraintBottom_toTopOf="@id/main_fragment"
        app:layout_constraintLeft_toRightOf="@id/status"
        app:layout_constraintRight_toLeftOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_button"
        app:layout_constraintBottom_toTopOf="@id/main_fragment"
        app:layout_constraintLeft_toRightOf="@id/route"
        app:layout_constraintRight_toLeftOf="@id/good"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/good"
        app:layout_constraintBottom_toTopOf="@+id/main_fragment"
        app:layout_constraintLeft_toRightOf="@id/status"
        app:layout_constraintRight_toLeftOf="@id/bad"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bad"
        app:layout_constraintBottom_toTopOf="@+id/main_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/good"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>